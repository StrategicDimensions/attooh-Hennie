<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="signature_item_type_mobile" model="signature.item.type">
        <field name="name">Mobile</field>
        <field name="type">text</field>
        <field name="auto_field">mobile</field>
        <field name="default_width" type="float">0.150</field>
        <field name="default_height" type="float">0.015</field>
        <field name="placeholder">Your Mobile</field>
    </record>

    <record id="signature_item_type_id_number" model="signature.item.type">
        <field name="name">ID Number</field>
        <field name="type">text</field>
